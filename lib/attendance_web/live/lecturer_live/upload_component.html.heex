<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="lecturer-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">

    <%= label f, :last_name %>
    <%= text_input f, :last_name %>
    <%= error_tag f, :last_name %>

    <div>
      <%= live_file_input @uploads.csv_file %>
    </div>

    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
